<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="dpm_vendor_bill_report"
            model="account.move"
            string="DPM Vendor Bill"
            report_type="qweb-pdf"
            name="custom_report.dpm_vendor_bill_template"
            file="custom_report.dpm_vendor_bill_template"
            print_report_name="'DPM Supplier Invoice - %s' % (object.name)"
        />

        <record id="action_report_vendor_bill_dpm" model="ir.actions.report">
            <field name="name">Supplier Invoice</field>
            <field name="model">account.move</field>
            <field name="report_name">custom_report.dpm_vendor_bill_template</field>
            <field name="report_file">custom_report.dpm_vendor_bill_template</field>
            <field name="print_report_name">(object.get_print_report_name())</field>
            <field name="attachment"/>
            <field name="report_type">qweb-pdf</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/>
        </record>
    </data>
</odoo>