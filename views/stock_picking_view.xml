<odoo>
    <record id="view_picking_form_inherit_line_no" model="ir.ui.view">
        <field name="name">stock.pinking.form.inherit.line.no</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="line_no"/>
            </xpath>
            
            <xpath expr="//field[@name='move_line_ids']" position="after">
                <group col="12">
                    <group colspan="8">
                        <field name="total_qty"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
